<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head'); %>
  <link rel="stylesheet" href="/css/create.css" />
  <title>Games With History - Create</title>
</head>

<body>
  <%- include('../partials/header'); %>
  <main>
    <%- include('../partials/controllers', {variant: 'secondary'}); %>
    <section class="form-container">
      <form action="/create" method="post">

        <h1>Game Creation</h1>
        <h3>Add your game here</h3>

        <fieldset>
          <label>Name:</label>
          <input type="text" name="nome" id="name-input" placeholder="Game name" required>
        </fieldset>

        <fieldset>
          <label>Image:</label>
          <input type=" url" name="imagem" id="image-input" placeholder="Image url" required>
        </fieldset>

        <button id="create-button" type="submit">Send</button>

      </form>
    </section>
  </main>
  <%- include('../partials/footer'); %>
  <script src="/js/script.js"></script>
</body>
</html>